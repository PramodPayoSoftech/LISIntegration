@model List<LISIntegration.Models.LogFileViewModel>

@{
    ViewData["Title"] = "View LIS Data Files";
}

<h1>Received LIS Data Files</h1>

<div class="mb-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Settings</a>
</div>

@if (!Model.Any())
{
            <div class="alert alert-info">
                No data files have been received yet. When the LIS machine sends data, files will appear here.
            </div>
}
else
{
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>File Name</th>
                            <th>Created</th>
                            <th>Size</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in Model)
                        {
                                    <tr>
                                        <td>@file.FileName</td>
                                        <td>@file.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>@file.FormattedSize</td>
                                        <td>
                                            <a asp-action="ViewFile" asp-route-filePath="@file.FilePath" class="btn btn-sm btn-primary">View</a>
                                        </td>
                                    </tr>
                        }
                    </tbody>
                </table>
            </div>
}