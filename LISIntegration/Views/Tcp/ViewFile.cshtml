@model LISIntegration.Models.FileContentViewModel

@{
    ViewData["Title"] = $"View File - {Model.FileName}";
}

<h1>File Content: @Model.FileName</h1>

<div class="mb-3">
    <a asp-action="ViewLogs" class="btn btn-secondary">Back to Files</a>
</div>

<div class="card">
    <div class="card-header">
        File Content
    </div>
    <div class="card-body">
        <pre class="bg-light p-3" style="max-height: 500px; overflow-y: auto;">@Model.Content</pre>
    </div>
</div> 